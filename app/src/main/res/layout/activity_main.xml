<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >

         <EditText
             android:id="@+id/qr_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="扫描二维码"
             />
         <EditText
             android:id="@+id/qr_desc"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="(识别二维码)"
             />
         <CheckBox
             android:id="@+id/show_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否显示Title"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/show_desc"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否显示底部描述"
             android:checked="true"
             />

         <CheckBox
             android:id="@+id/show_ding"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否有提示音"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/cb_show_custom_ding"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否自定义提示音"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/show_flash"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否显示手电筒"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/show_album"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否从相册选择"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/only_center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="是否只扫描框中内容"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/create_qr_code_with_logo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="生成二维码添加logo"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/crop_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="从相册选择并裁剪"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/show_zoom"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开启手动缩放(滑块)"
             android:checked="false"
             />

         <CheckBox
             android:id="@+id/auto_zoom"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开启自动缩放"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/finger_zoom"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开启双指缩放"
             android:checked="true"
             />
         <CheckBox
             android:id="@+id/double_engine"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="双识别引擎"
             android:checked="false"
             />

          <CheckBox
              android:id="@+id/loop_scan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="连续扫描"
              android:checked="true"
              />
         <CheckBox
             android:id="@+id/auto_light"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="自动灯光"
             android:checked="false"
             />
         <CheckBox
             android:id="@+id/have_vibrator"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="震动提醒"
             android:checked="true"
             />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续扫描间隔时间："
                android:textColor="@android:color/black"
                />
            <EditText
                android:id="@+id/loop_scan_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1"
                android:gravity="center_horizontal"
                />

         </LinearLayout>

         <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <RadioButton
                android:id="@+id/rb_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                />
            <RadioButton
                android:id="@+id/rb_bcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条形码"
                />
            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:checked="true"
                />

         </RadioGroup>
         <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <RadioButton
                android:id="@+id/rb_screen_sx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕竖向"
                />
            <RadioButton
                android:id="@+id/rb_screen_hx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕横向"
                />
            <RadioButton
                android:id="@+id/rb_screen_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕自动"
                />

         </RadioGroup>


         <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <RadioButton
                android:id="@+id/rb_scanline_radar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雷达"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/rb_scanline_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网格"
                />
            <RadioButton
                android:id="@+id/rb_scanline_hybrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="雷达+网格"
                />
            <RadioButton
                android:id="@+id/rb_scanline_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线"
                />

         </RadioGroup>


         <Button
             android:id="@+id/scan"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="扫描"
             />

         <Button
             android:id="@+id/make"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="生成"
             />

         <EditText
             android:id="@+id/qr_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="二维码内容" />

         <ImageView
             android:id="@+id/qr"
             android:layout_width="200dp"
             android:layout_height="200dp"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:background="@android:color/transparent" />
      </LinearLayout>
   </ScrollView>


</LinearLayout>
